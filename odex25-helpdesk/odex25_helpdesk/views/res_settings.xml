<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- model.name inherit form view -->
    <record id="res_config_settings_odex25_helpdesk_form" model="ir.ui.view">
      <field name="name">Config Settings for Helpdesk</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="90"/>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
           <xpath expr="//div[hasclass('settings')]" position="inside">
           <div class="app_settings_block" data-string="odex25_helpdesk" string="Helpdesk" data-key="odex25_helpdesk" groups="odex25_helpdesk.group_odex25_helpdesk_manager">
               <t groups="odex25_helpdesk.group_odex25_helpdesk_manager">
                <h2>Helpdesk Settings</h2>
                <div class="row mt16 o_settings_container">
                <div class="col-12 col-lg-6 o_setting_box" title="To configure the Helpdesk">

                     <div class="o_setting_right_pane">
                     <div class="content-group">
                     <div class="row mt16">
                          <label string="Notify Days" for="days_before_finish" class="col-lg-3 o_light_label"/>
                          <field name="days_before_finish"/>
                     </div>
                     <div class="text-muted">
                       Notify Days Before Finish Helpdesk/Subscription
                     </div>
                     </div>
                     </div>

                     <div class="o_setting_right_pane">
                     <div class="content-group">
                     <div class="row mt16">
                          <label string="Tickets No." for="tickets_no" class="col-lg-3 o_light_label"/>
                          <field name="tickets_no"/>
                     </div>
                      <div class="text-muted">
                       Default Tickets Number for Helpdesk Teams
                      </div>
                     </div>
                     </div>

                </div>
                </div>

               </t>
           </div>
           </xpath>
      </field>
  </record>
  
</odoo>