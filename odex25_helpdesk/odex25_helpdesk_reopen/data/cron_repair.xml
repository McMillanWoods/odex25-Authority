<odoo>
    <data>

        <record id="ir_cron_automatic_done_state" model="ir.cron">
            <field name="name">Help Desk Reopen ;Automatic Done State</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=2, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_odex25_helpdesk_ticket"/>
            <field name="code">model.automatic_done_state()</field>
            <field name="state">code</field>
        </record>
    </data>
</odoo>
