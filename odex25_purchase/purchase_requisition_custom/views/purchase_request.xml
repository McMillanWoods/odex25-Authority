<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- purchase.request form view -->
        <record id="purchase_request_form" model="ir.ui.view">
            <field name="name">purchase.request.view.form</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="action_confirm" groups="purchase_requisition_custom.create_purchase_request" type="object" string="Submit" states="draft" class="oe_highlight"/>
                        <button name="action_approve" groups="purchase_requisition_custom.group_department_approve" type="object" string=" Department Approve" states="department manager" class="oe_highlight"/>
                        <button name="approve_department" type="object" string="Direct Manager Approve" groups="purchase_requisition_custom.group_direct_manger" states="direct manager" class="oe_highlight"/>
<!--                        <button name="it_approve" groups="purchase_requisition_custom.group_it_purchase_requisition" type="object" string=" It Approval" states="it manager" class="oe_highlight"/>-->
                        <button name="action_refuse" type="object" string="Refuse"  groups="purchase_requisition_custom.group_direct_manger" attrs="{'invisible':[('state', 'in', ['waiting', 'refuse','done','cancel','draft','department manager'])]}"/>
                        <button name="action_refuse_department" type="object" string="Refuse"  groups="purchase_requisition_custom.group_department_approve" attrs="{'invisible':[('state', 'in', ['waiting', 'refuse','done','cancel','draft','direct manager'])]}"/>

                        
                        <button name="create_requisition" groups="purchase.group_purchase_user,purchase.group_purchase_manager" type="object" string="Create Requisition" 
                             class="oe_highlight"
                             attrs="{'invisible' : ['|',('state' , '!=' , 'waiting'),('purchase_create' , '=' , True)]}"/> 
                             
                        <button name="create_purchase_order2" type="object" string="Create Purchase Order"
                             class="oe_highlight" groups="purchase.group_purchase_manager"
                             attrs="{'invisible' : ['|',('state' , '!=' , 'waiting'),('purchase_create' , '=' , True)]}"/> 


                        <button name="action_cancel" type="object" string="Cancel" states="draft"  class="oe_stat_button"/>
                        <button name="action_done" type="object" string="Done" class="oe_stat_button" groups="purchase.group_purchase_manager" states="waiting"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" required="1" readonly="1" class="oe_inline"/></h1>
                        </div>
                        <group col="4" colspan="2">
                            <field name="it_categ" invisible="1"/>
                            <field name="picking_type_id" invisible="1"/>
                            <field name="by_purchase" groups="purchase.group_purchase_user"/>
                            <field name="department_id" force_save="1" attrs="{'readonly' : ['|',('state' , '!=' , 'draft'),('by_purchase' , '!=' , True)] , 'required' : [('by_purchase' , '=' , True)]}" readonly="1"/>
                            <!-- context="{'get_all' : by_purchase,'department' : department_id }" -->
                            <field name="employee_id" attrs="{'readonly':[('by_purchase' , '=' , False)]}" required="1"
                                   options="{'no_create' : True , 'no_edit' : True ,'no_open' : True}"/>
                            <field name="product_category_ids" widget="many2many_tags" attrs="{'readonly':[('state' , '!=' , 'draft')]}" required="1" options="{'no_create' : True , 'no_edit' : True ,'no_open' : True}"/>
                            <field name="purchase_purpose" 
                            required="1"
                             attrs="{'readonly':[('state' , '!=' , 'draft')]}" />
                            <field name="date" readonly="1"/>
                            <field name="purchase_create" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="partner_id" options="{'no_create' : True , 'no_edit' : True ,'no_open' : True}" required="0"
                             /> 

                            <field name="type" required="1" attrs="{'readonly':[('state' , '!=' , 'draft')]}"/>
                            
                            <field name="project_id" options ="{'no_create': True, 'no_open': True}" attrs="{'invisible':[('type','!=', 'project')],
                             'required':[('type','=', 'project')], 'readonly':[('state' , '!=' , 'draft')]}"/>
                            <field name="project_stage_id" options ="{'no_create': True, 'no_open': True}"
                                   domain="[('project_id', '=', project_id)]"
                                   attrs="{'invisible':['|',('type','!=', 'project'), ('project_id','=', False)]}"/>

                        </group>
                        <notebook>
                            <page string="Items" name="">
                                <field name="line_ids" attrs="{'readonly':[('state' , '!=' , 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="product_id" domain="[('purchase_ok', '=', True),('categ_id','child_of',parent.product_category_ids)]" options="{'no_create' : True , 'no_edit' : True ,'no_open' : True}" required="1" />
                                        <field name ="name"/>
                                        <field name="qty" required="1"/>
                                        <field name ="price_unit" invisible="1"/>
                                        <field name ="max_price" force_save="1"/>
                                        <field name ="min_price" force_save="1"/>
                                        <field name="account_id" force_save="1" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Note" name="">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- purchase.request tree view -->
        <record id="model_name_view_tree" model="ir.ui.view">
            <field name="name">Purchase Request</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                     <field name="product_category_ids" widget="many2many_tags"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- purchase.request action window -->
        <record id="purchase_request_action" model="ir.actions.act_window">
            <field name="name">Employee Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.request</field>
            <field name="view_mode">tree,form</field>
            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create New Employee purchase request
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="purchase_request_menu" name="Employee Purchase Request" parent="purchase.menu_purchase_root" action="purchase_request_action" sequence="4"/>
        
    </data>
</odoo>
